{
  "compilerOptions": {
    "moduleResolution": "node",
    "jsx": "react-native",
    "target": "es6",
    "module": "esnext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "removeComments": true,
    "baseUrl": "./",
    "paths": {
      "@pijma/*": [
        "./packages/*/src"
      ]
    }
  },
  "exclude": [
    "./node_modules"
  ]
}